# LazyMail Environment Configuration Template
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=LazyMail Phishing Detection
DEBUG=true

# =============================================================================
# POSTGRESQL DATABASE
# =============================================================================
POSTGRES_USER=lazymail
POSTGRES_PASSWORD=changeme_secure_password_here
POSTGRES_DB=lazymail
POSTGRES_HOST=postgres  # Use 'localhost' for local development outside Docker
POSTGRES_PORT=5432

# =============================================================================
# REDIS CACHE & QUEUE
# =============================================================================
REDIS_HOST=redis  # Use 'localhost' for local development outside Docker
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password_here

# =============================================================================
# RSPAMD SPAM DETECTION
# =============================================================================
RSPAMD_HOST=rspamd  # Use 'localhost' for local development outside Docker
RSPAMD_PORT=11334
RSPAMD_CONTROLLER_PASSWORD=changeme_rspamd_password_here

# =============================================================================
# SECURITY NOTES
# =============================================================================
# - Use strong passwords (20+ characters, mixed case, numbers, symbols)
# - Never commit .env file to version control
# - Rotate passwords regularly in production
# - Keep different credentials for dev/staging/prod environments
